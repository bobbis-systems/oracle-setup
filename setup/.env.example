# ============================================
# oracle-setup .env.example
# Copy this file to .env and customize it
# ============================================

# === User Configuration ===
CREATE_USER=dockerdev
USER_PASSWORD=changeme123
ADD_TO_SUDOERS=true
NO_PASSWORD_SUDO=true

# === Docker Host Configuration ===
INSTALL_DOCKER=true
DOCKER_DIR=/opt/docker
DOCKER_GROUP=docker
ENABLE_DOCKER_SYMLINKS=true

# === Firewall Configuration ===
SETUP_UFW=true
ALLOW_SSH=true
ALLOW_HTTP=false
ALLOW_HTTPS=false

# === SSH Configuration ===
CHECK_SSH=true

# === System Customization ===
SETUP_MOTD=true
ADD_ALIASES=true

# === System Update & Core Tools ===
UPDATE_SYSTEM=true
INSTALL_CORE_TOOLS=true

# === Internal Setup Metadata ===
SETUP_ENV=oracle
